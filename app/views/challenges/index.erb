<div class="container">
  <h3 style="margin: 50px 0 25px 0;">Challenges</h3>
  <table class="table table-sm table-hover w-75" style="margin-bottom: 25px;">
    <tr>
      <th>start</th>
      <th>end</th>
      <th>participants</th>
      <th>status</th>
      <th></th>
    </tr>
    <% @challenges.each do |c| %>
    <tr>
      <td><%= c.started_at %></td>
      <td><%= c.ended_at %></td>
      <td><%= c.participants_as_str(medals: true) %></td>
      <td>
        <% if c.active? %>
        <span class="badge bg-success">active</span>
        <% else %>
        <span class="badge bg-danger">completed</span>
        <% end %>
      </td>
      <td><a style="display: block;" href="/challenges/<%= c.id %>">view â†’</a></td>
    </tr>
    <% end %>
  </table>
</div>
