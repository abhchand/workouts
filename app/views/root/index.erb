<div class="container">
  <h1 style="margin: 50px 0;">🏋🏽‍♀️ Workout Challenges 🏋🏽‍♀️</h1>

  <a href="/challenges/new" class="btn btn-primary">Start a new Challenge</a>

  <h3 style="margin: 50px 0 25px 0;">Active Challenges</h3>
  <table class="table table-hover" style="margin-bottom: 25px;">
    <tr>
      <th>start</th>
      <th>end</th>
      <th>participants</th>
      <th></th>
    </tr>
    <% @active_challenges.each do |c| %>
    <tr>
      <td><%= c.started_at %></td>
      <td><%= c.ended_at %></td>
      <td><%= c.participants.map(&:name).sort.join(", ") %></td>
      <td><a style="display: block;" href="/challenges/<%= c.id %>">view →</a></td>
    </tr>
    <% end %>
  </table>

  <a role="button" type="button" class="btn btn-sm btn-outline-primary" href="/challenges/history">
    See older Challenges →
  </a>

  <br />
  <br />
  <iframe style="margin-top: 75px;" src="https://ghbtns.com/github-btn.html?user=abhchand&type=follow&count=true&size=large" frameborder="0" scrolling="0" width="188px" height="30px"></iframe>
</div>
