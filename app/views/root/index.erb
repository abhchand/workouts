<div class="container">
  <h3 style="margin: 50px 0 25px 0;">My Challenges</h3>
  <a style="margin-bottom: 25px;" href="/challenges/new" class="btn btn-success btn-sm">Start a new Challenge</a>

  <% if @my_challenges.empty? %>
  <p><i>No challenges</i></p>
  <% else %>
  <div class="table-responsive">
  <table class="table table-sm table-hover" style="margin-bottom: 25px;">
    <tr>
      <th>start</th>
      <th>end</th>
      <th>participants</th>
      <th style="width: 150px;">status</th>
      <th></th>
    </tr>
    <% @my_challenges.each do |c| %>
    <tr>
      <td style="width: 150px;"><%= c.started_at.strftime("%Y %b %d") %></td>
      <td style="width: 150px;"><%= c.ended_at.strftime("%Y %b %d") %></td>
      <td style="width: 200px;"><%= c.participants_as_str(medals: true) %></td>
      <td>
        <% if c.active? %>
        <span class="badge bg-success">active</span>
        <% else %>
        <span class="badge bg-danger">completed</span>
        <% end %>
      </td>
      <td><a style="display: block;" href="/challenges/<%= c.id %>">view</a></td>
    </tr>
    <% end %>
  </table>
  </div>
  <% end %>

  <br />
  <br />
  <iframe style="margin-top: 75px;" src="https://ghbtns.com/github-btn.html?user=abhchand&type=follow&count=true&size=large" frameborder="0" scrolling="0" width="188px" height="30px"></iframe>
</div>
